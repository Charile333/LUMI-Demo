{
  "name": "forecastlux-market",
  "version": "1.0.0",
  "description": "ForecastLux Prediction Market Frontend with Next.js and Tailwind CSS",
  "scripts": {
    "dev": "node server-with-websocket.js",
    "dev:old": "node server.js",
    "dev:next": "next dev",
    "build": "next build",
    "postinstall": "npm list tailwindcss autoprefixer postcss || echo 'CSS dependencies check'",
    "start": "NODE_ENV=production node server.js",
    "start:ws": "NODE_ENV=production node server-with-websocket.js",
    "start:old": "next start",
    "lint": "next lint",
    "cron": "ts-node scripts/cron-scheduler.ts",
    "activate-markets": "ts-node scripts/activate-markets-cron.ts",
    "settle-trades": "ts-node scripts/settle-trades-cron.ts",
    "clean-orders": "ts-node scripts/clean-expired-orders.ts",
    "db:setup": "psql $DATABASE_URL -f scripts/supabase-step2-tables.sql",
    "db:migrate": "psql $DATABASE_URL -f scripts/add-activity-fields.sql",
    "db:add-options": "psql $DATABASE_URL -f scripts/add-outcome-options.sql",
    "db:setup-topics": "psql $DATABASE_URL -f scripts/create-topics-tables.sql",
    "topic-cleanup": "ts-node scripts/topic-cleanup-cron.ts"
  },
